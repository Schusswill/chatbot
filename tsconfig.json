{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "types": ["node"], 
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "./built"
  },
  "include": [
      "./src/**/*"
  ]
}