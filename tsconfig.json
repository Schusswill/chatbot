{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "strictFunctionTypes": true,
    //"strictPropertyInitialization": true, //off for typeorm entities
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    //"noUnusedParameters": true, //off for typeorm entity decorators
    "sourceMap": false,
    "moduleResolution": "node",
    "outDir": "./built"
  },
  "include": [
      "./src/**/*"
  ]
}